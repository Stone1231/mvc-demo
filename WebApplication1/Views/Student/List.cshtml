                @Ajax.ActionLink("編輯", "Edit", null,
                        new { id = item.Sn },
                        new AjaxOptions()
                        {
                            UpdateTargetId = "editDiv",
                            InsertionMode = InsertionMode.Replace,
                            OnSuccess = "rwData.openEdit();",
                            HttpMethod = "Get"
                        },
                        new {@class="btn btn-primary"})
